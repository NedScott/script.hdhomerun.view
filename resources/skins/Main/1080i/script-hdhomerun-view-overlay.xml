                        </control>
                        <control type="label">
                            <visible>IsEmpty(ListItem.Property(channel.icon))</visible>
                            <posx>10</posx>
                            <posy>10</posy>
                            <width>160</width>
                            <height>160</height>
                            <font>font30</font>
                            <align>center</align>
                            <aligny>center</aligny>
                            <textcolor>FFFFFFFF</textcolor>
                            <label>[B][COLOR FF99CCFF]$INFO[ListItem.Property(channel.number)][/COLOR][/B]</label>
                        </control>
                        <control type="image">
                            <posx>10</posx>
                            <posy>10</posy>
                            <width>160</width>
                            <height>160</height>
                            <texture>$INFO[ListItem.Property(channel.icon)]</texture>
                            <aspectratio aligny="top">scale</aspectratio>
                        </control>
                        <control type="image">
                            <posx>180</posx>
                            <posy>0</posy>
                            <width>240</width>
                            <height>180</height>
                            <texture fallback="script-hdhomerun-view-default_image.png">$INFO[ListItem.Thumb]</texture>
                            <aspectratio aligny="top">scale</aspectratio>
                        </control>
                        <control type="image">
                            <posx>190</posx>
                            <posy>193</posy>
                            <width>88</width>
                            <height>66</height>
                            <texture fallback="script-hdhomerun-view-default_image.png">$INFO[ListItem.Property(next.icon)]</texture>
                            <aspectratio aligny="top">scale</aspectratio>
                        </control>
                        <control type="label">
                            <posx>298</posx>
                            <posy>193</posy>
                            <width>500</width>
                            <height>30</height>
                            <font>font10</font>
                            <align>left</align>
                            <textcolor>FFFFFFFF</textcolor>
                            <label>$INFO[ListItem.Property(next.title)]</label>
                        </control>
                        <control type="label">
                            <posx>298</posx>
                            <posy>223</posy>
                            <width>150</width>
                            <height>30</height>
                            <font>font10</font>
                            <align>left</align>
                            <textcolor>FFFFFFFF</textcolor>
                            <label>$INFO[ListItem.Property(next.start)]</label>
                        </control>
                        <control type="textbox">
                            <posx>10</posx>
                            <posy>180</posy>
                            <width>160</width>
                            <height>80</height>
                            <font>font13</font>
                            <align>center</align>
                            <textcolor>FFFFFFFF</textcolor>
                            <label>[B]$INFO[ListItem.Label][/B]</label>
                        </control>
                        <control type="label">
                            <posx>430</posx>
                            <posy>10</posy>
                            <width>380</width>
                            <height>30</height>
                            <font>font13</font>
                            <align>left</align>
                            <textcolor>FFFFFFFF</textcolor>
                            <label>[B]$INFO[ListItem.Property(show.title)][/B]</label>
                        </control>
                        <control type="textbox">
                            <posx>430</posx>
                            <posy>60</posy>
                            <width>380</width>
                            <height>128</height>
                            <font>font10</font>
                            <align>left</align>
                            <textcolor>FFFFFFFF</textcolor>
                            <label>$INFO[ListItem.Property(show.synopsis)]</label>
                        </control>
                        <control type="image">
                            <posx>180</posx>
                            <posy>180</posy>
                            <width>240</width>
                            <height>8</height>
                            <texture>$INFO[ListItem.Property(show.progress)]</texture>
                            <colordiffuse>FF00FF00</colordiffuse>
                            <aspectratio>stretch</aspectratio>
                        </control>
                        <control type="image">
                            <posx>0</posx>
                            <posy>0</posy>
                            <width>822</width>
                            <height>268</height>
                            <texture border="5">script-hdhomerun-view-white_outline.png</texture>
                            <aspectratio>stretch</aspectratio>
                        </control>
                    </control>
                </focusedlayout>
            </control>
        </control>

        <control type="group" id="200">
            <visible>!IsEmpty(Window.Property(show.overlay)) + !IsEmpty(Window.Property(channel.name))</visible>
            <animation effect="slide" start="0,1080" end="0,-150" time="500">VisibleChange</animation>
