<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<window>
    <onload>SetProperty(loading.progress,25)</onload>
    <onload>SetProperty(loading.status,$ADDON[script.hdhomerun.view 32010])</onload>
    <defaultcontrol>209</defaultcontrol>
    <coordinates>
        <system>1</system>
        <posx>0</posx>
        <posy>0</posy>
    </coordinates>
    <controls>

        <control type="image">
            <visible>!Window.IsActive(fullscreenvideo)</visible>
            <posx>0</posx>
            <posy>0</posy>
            <width>1920</width>
            <height>1080</height>
            <texture>script-hdhomerun-view-white_square.png</texture>
            <colordiffuse>FF000000</colordiffuse>
            <aspectratio>stretch</aspectratio>
        </control>

        <control type="videowindow">
            <visible>!IsEmpty(Window.Property(touch.mode))</visible>
            <posx>0</posx>
            <posy>0</posy>
            <width>1920</width>
            <height>1080</height>
        </control>

        <control type="group" id="209">
            <defaultcontrol>210</defaultcontrol>
            <control type="list" id="210">
                <visible allowhiddenfocus="true">false</visible>
                <animation effect="slide" start="0,0" end="-820,0" time="0" condition="!IsEmpty(Window.Property(show.overlay))">Conditional</animation>
                <posx>0</posx>
                <posy>0</posy>
                <width>1920</width>
                <height>1080</height>

                <itemlayout width="1920" height="1080">
                </itemlayout>
                <focusedlayout width="1920" height="1080">
                </focusedlayout>
            </control>
        </control>

        <control type="group" id="200">
            <visible>!IsEmpty(Window.Property(show.overlay))</visible>
