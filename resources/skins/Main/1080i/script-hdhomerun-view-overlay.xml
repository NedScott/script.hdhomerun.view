                <posy>68</posy>
                <width>64</width>
                <height>48</height>
                <texture>audio/$INFO[VideoPlayer.AudioChannels].png</texture>
            </control>
        </control>

        <control type="group">
            <visible>!IsEmpty(Window.Property(loading.progress))</visible>
            <posx>760</posx>
            <posy>340</posy>

            <control type="image">
                <posx>80</posx>
                <posy>137</posy>
                <width>249</width>
                <height>138</height>
