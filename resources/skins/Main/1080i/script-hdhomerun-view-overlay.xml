                        <control type="image">
                            <posx>500</posx>
                            <posy>193</posy>
                            <width>88</width>
                            <height>66</height>
                            <texture>$INFO[ListItem.Property(next.icon)]</texture>
                            <aspectratio aligny="top">scale</aspectratio>
                        </control>

                    </control>
                </itemlayout>

