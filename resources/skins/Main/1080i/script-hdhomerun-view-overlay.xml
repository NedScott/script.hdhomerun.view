                    <control type="group">
                        <posx>400</posx>
                        <posy>0</posy>

                        <control type="image">
                            <posx>0</posx>
                            <posy>0</posy>
                            <width>420</width>
                            <height>268</height>
                            <texture>script-hdhomerun-view-white_square.png</texture>
                            <colordiffuse>DD333333</colordiffuse>
                            <aspectratio>stretch</aspectratio>
                        </control>
                        <control type="image">
                            <visible>!IsEmpty(ListItem.Property(is.current))</visible>
                            <posx>0</posx>
                            <posy>0</posy>
                            <width>420</width>
                            <height>268</height>
                            <texture>script-hdhomerun-view-white_square.png</texture>
                            <colordiffuse>2000FF00</colordiffuse>
                            <aspectratio>stretch</aspectratio>
                        </control>
                        <control type="image">
                            <posx>180</posx>
                            <posy>188</posy>
                            <width>240</width>
                            <height>81</height>
                            <texture>script-hdhomerun-view-white_square.png</texture>
                            <colordiffuse>22FFFFFF</colordiffuse>
                            <aspectratio>stretch</aspectratio>
                        </control>
                        <control type="label">
                            <visible>IsEmpty(ListItem.Property(channel.icon))</visible>
                            <posx>10</posx>
                            <posy>10</posy>
                            <width>160</width>
                            <height>160</height>
                            <font>font30</font>
                            <align>center</align>
                            <aligny>center</aligny>
                            <textcolor>FFFFFFFF</textcolor>
                            <label>[B][COLOR FF99CCFF]$INFO[ListItem.Property(channel.number)][/COLOR][/B]</label>
                        </control>
                        <control type="image">
                            <posx>10</posx>
                            <posy>10</posy>
                            <width>160</width>
                            <height>160</height>
                            <texture>$INFO[ListItem.Property(channel.icon)]</texture>
                            <aspectratio aligny="top">scale</aspectratio>
                        </control>
                        <control type="image">
                            <posx>180</posx>
                            <posy>0</posy>
                            <width>240</width>
                            <height>180</height>
                            <texture fallback="script-hdhomerun-view-default_image.png">$INFO[ListItem.Thumb]</texture>
                            <aspectratio aligny="top">scale</aspectratio>
                        </control>
                        <control type="textbox">
                            <posx>10</posx>
                            <posy>180</posy>
                            <width>160</width>
                            <height>80</height>
                            <font>font13</font>
                            <align>center</align>
                            <textcolor>FFFFFFFF</textcolor>
                            <label>[B]$INFO[ListItem.Label][/B]</label>
                        </control>
                        <control type="textbox">
                            <posx>190</posx>
                            <posy>193</posy>
                            <width>220</width>
                            <height>60</height>
                            <font>font10</font>
                            <align>left</align>
                            <aligny>top</aligny>
                            <textcolor>FFFFFFFF</textcolor>
                            <label>$INFO[ListItem.Property(next.title)]</label>
                        </control>
                        <control type="image">
                            <posx>180</posx>
                            <posy>180</posy>
                            <width>240</width>
                            <height>8</height>
                            <texture>$INFO[ListItem.Property(show.progress)]</texture>
                            <colordiffuse>FF00FF00</colordiffuse>
                            <aspectratio>stretch</aspectratio>
                        </control>

