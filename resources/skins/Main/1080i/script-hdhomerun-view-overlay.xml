                        <posy>0</posy>
                        <control type="image">
                            <posx>0</posx>
                            <posy>0</posy>
                            <width>820</width>
                            <height>268</height>
                            <texture>script-hdhomerun-view-white_square.png</texture>
                            <colordiffuse>DD555555</colordiffuse>
                            <aspectratio>stretch</aspectratio>
                        </control>
                        <control type="image">
                            <visible>!IsEmpty(ListItem.Property(is.current))</visible>
                            <posx>0</posx>
                            <posy>0</posy>
                            <width>820</width>
                            <height>268</height>
                            <texture>script-hdhomerun-view-white_square.png</texture>
                            <colordiffuse>2000FF00</colordiffuse>
